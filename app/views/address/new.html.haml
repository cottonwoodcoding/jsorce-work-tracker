%h3.text-center.underline Add A New Address
= form_for(@address, url: '/create_address', html: {class: 'form-horizontal'}) do |f|
  = hidden_field_tag :job_name, @job.name
  .form-group
    = f.label 'Address', {class: 'control-label col-sm-2'}
    .col-sm-9
      = f.text_field :value, {class: 'form-control'}
  .text-center
    = link_to 'Cancel', :back, {class: 'btn btn-default'}
    = f.submit 'Create Address', {class: 'btn btn-warning'}