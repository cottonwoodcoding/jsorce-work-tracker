%h3.underline.text-center
  = "Setup An Appointment For: #{@user.full_name}"
= form_for(@appointment, url: '/create_appointment', html: {class: 'form-horizontal'}) do |f|
  = hidden_field_tag :user_id, @user.id
  .form-group
    = f.label :name, class: 'control-label col-sm-2'
    .col-sm-9
      = f.text_field :name, {class: 'form-control', required: true}
  .form-group
    = f.label :number, class: 'control-label col-sm-2'
    .col-sm-9
      = f.phone_field :number, {class: 'form-control', required: true}
  .form-group
    = f.label :address, class: 'control-label col-sm-2'
    .col-sm-9
      = f.text_field :address, {class: 'form-control', required: true}
  .form-group
    = f.label :notes, class: 'control-label col-sm-2'
    .col-sm-9
      = f.text_area :notes, {class: 'form-control', required: true}
  .text-center
    = link_to 'Back', :back, class: 'btn btn-default'
    = f.submit class: 'btn btn-danger'
