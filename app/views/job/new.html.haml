%h3.text-center.underline Add A New Job
= form_for(@job, url: '/create_job', html: {class: 'form-horizontal'}) do |f|
  .form-group
    = f.label :name, {class: 'control-label col-sm-2'}
    .col-sm-9
      = f.text_field :name, {class: 'form-control', required: true}
  .text-center
    = link_to 'Cancel', :back, {class: 'btn btn-default'}
    = f.submit 'Create Job', {class: 'btn btn-warning'}