%h3.text-center
  = "Appointments For: #{@user.full_name}"
- if @appointments.count == 0
  %h5.text-center
    No Appointments Found!
- else
  - @appointments.to_enum.with_index(1).each do |appointment, index|
    #accordion.panel-group.text-center
      .panel.panel-default
        .panel-heading
          %h4.panel-title
            %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "##{appointment.id}"}
              = "Appointment #{index}"
        .panel-collapse.collapse.out{id: appointment.id}
          .panel-body
            .div
              %label Name:
              = appointment.name
            .div
            %label Number:
            = appointment.number
            .div
              %label Address:
              = appointment.address
            .div
              %label Notes:
              = appointment.notes
            .div
              %label Status:
              = appointment.status
            .div
              %label Status Notes:
              = appointment.status_notes
            .div
              .underline Actions:
              %a{href: "/edit_appointment/#{appointment.id}"}
                = fa_icon 'edit 2x'
              - if admin?
                = fa_icon 'trash-o 2x'
.text-center
  = link_to 'Back', :back, {class: 'btn btn-default', role: 'button'}
